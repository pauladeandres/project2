<div class="container">
    <h2>You have {{data.sites}} available sites</h2>

    {{#if data.id}}
    <form action="/restaurant/booking/booking-finished/{{data.id}}" method="POST">
        <div class="form-group">
            <label class="control-label" for="places">Reserve your places:</label>
            <input class="form-control" id="place" name="place" type="text" />
            <input value="{{data.sites}}" name="hidden" type="hidden">
        </div>

        <div class="form-group">
            <button class="btn btn-primary " name="submit" type="submit">Submit</button>
        </div>
    </form>

    <a href="/restaurants/reservation/{{id}}">Volver atras</a>
</div>
{{/if}}

{{#unless data.id}}
<p>This restaurant has no sites available</p>
{{/unless}}